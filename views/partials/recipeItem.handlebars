<div class="card">
  <div class="card-header d-flex justify-content-between" id="heading-{{id}}" data-toggle="collapse"
    data-target="#collapse-{{id}}" aria-expanded="false" aria-controls="collapse-{{id}}">
    <span class="mb-0">
      {{name}}
    </span>
    <div>
      {{#if numMatches}}
      <span class="badge badge-success">{{numMatches}}</span>&nbsp;<span class="text-muted">matches</span>
      {{/if}}
      {{!-- <i class="fas fa-caret-down"></i> --}}
    </div>
  </div>

  <div id="collapse-{{id}}" class="collapse" aria-labelledby="heading-{{id}}">
    <div class="card-body text-center">
       <button data-link="/recipes/{{id}}" type="button" class="btn btn-info btn-block">View recipe&nbsp;&nbsp;<i class="fas fa-info-circle fa-sm"></i></button>
      {{#if numMatches}}
       <br>
      <p class="font-italic">You currently have <span class="text-success font-weight-bold">{{numMatches}}</span> of this recipe's ingredients!</p>
      <ul class="list-group">
      {{#each matches}}
        <li class="list-group-item">{{ingredientName}}</li>
      {{/each}}
      </ul>
      {{/if}}
       {{#if numMissing}}
       <br>
      <p class="font-italic">You currently do not have <span class="text-danger font-weight-bold">{{numMissing}}</span> of this recipe's ingredients!</p>
      <ul class="list-group">
      {{#each missing}}
        <li class="list-group-item">{{ingredientName}}</li>
      {{/each}}
      </ul>
      {{/if}}

    </div>
  </div>
</div>
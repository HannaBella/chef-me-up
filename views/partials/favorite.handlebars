<li class="favorite-block list-group-item" data-id="{{id}}" data-name="{{name}}">
    <div class="d-flex justify-content-between align-items-center">
        <span class="font-weight-bold text-muted">{{name}}</span>
        <div>
            <i data-link="/recipes/{{id}}" class="text-info fas fa-info-circle"></i>
            <i data-id="{{id}}" class="ml-3 favorite-btn text-danger fas fa-heart"></i>
        </div>
    </div>
</li>
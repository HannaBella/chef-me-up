<script async="true" src="https://cdn.whisk.com/sdk/shopping-list.js" type="text/javascript"></script>
<script>
    var whisk = whisk || {};
    whisk.queue = whisk.queue || [];

    whisk.queue.push(function () {
        whisk.shoppingList.defineWidget("BIVR-DPZT-FJMP-YPEJ", {
            styles: {
                button: {
                    borderRadius: 6
                }
            }
        });
    });
</script>

<div class="row">
    <div class="col-sm-12">
        <div class="card text-center">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span></span>
                <div id="name-block">
                    <h4>
                        {{name}}
                    </h4>
                    <p class="text-muted mb-0" style="font-size: 0.8em">
                        {{cuisine}} | By {{author}} on {{createdOn}}
                    </p>
                </div>
                <span></span>

            </div>

            <div class="card-body">
                <div class="row justify-content-center mb-3">
                    <span class="font-italic text-muted" style="font-size: 0.9em">
                        {{description}}
                    </span>
                </div>
                <div class="row">
                    <div class="col-4" style="border-right: 1px solid gray">
                        <p class="font-weight-bold mb-1 recipe-subTitle" style="font-size: .9em">Servings</p>
                        <p class="mb-0" style="font-size: .8em">
                            {{serving}} servings
                        </p>
                        <i class="text-muted fas fa-utensil-spoon"></i>

                    </div>
                    <div class="col-4" style="border-right: 1px solid gray">
                        <p class="font-weight-bold mb-1 recipe-subTitle" style="font-size: .9em">Prep. Time</p>
                        <p class="mb-0" style="font-size: .8em">
                            {{prep}} min.
                        </p>
                        <i class="text-muted far fa-clock"></i>

                    </div>
                    <div class="col-4">
                        <p class="font-weight-bold mb-1 recipe-subTitle" style="font-size: .9em">Cook Time</p>
                        <p class="mb-0" style="font-size: .8em">
                            {{cook}} min.
                        </p>
                        <i class="text-muted fas fa-fire-alt"></i>
                    </div>
                </div>
                <hr>
                <div class="row" id="ig-block">
                    <div class="col-sm-5" id="ig-list">
                        <p class="font-weight-bold recipe-subTitle">
                            Ingredients
                        </p>

                        {{#each ingredients}}

                        <p class="mb-2">
                            <span class="font-italic">{{quantity}} {{unit}}</span>
                            <span class="text-success">&nbsp;{{igName}}</span>
                        </p>

                        {{/each}}
                        {{!-- WHISK BLOCK --}}
                        <div id="BIVR-DPZT-FJMP-YPEJ">
                            <script>
                                whisk.queue.push(function () {
                                    whisk.display("BIVR-DPZT-FJMP-YPEJ");
                                });
                            </script>
                        </div>

                        <hr class="d-block d-sm-none">
                    </div>
                    <div class="col-sm-offset-1 col-sm-6" id="in-list">
                        <p class="font-weight-bold recipe-subTitle">
                            Instructions
                        </p>
                        <ol>
                            {{#each instructions as |i|}}
                            <li>{{i}}</li>

                            {{/each}}
                        </ol>

                    </div>
                </div>

            </div>

        </div>

    </div>


</div>


<span id="recipe-url" class="d-none">{{url}}</span>

